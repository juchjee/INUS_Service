     // Create a jqxComboBox
     $("#empNo").jqxComboBox({ selectedIndex: -1, source: dataAdapter, displayMember: "label", valueMember: "value", width: 300, height: 36,	promptText: "모델을 선택하세요!"});

     var item = $("#empNo").jqxComboBox('getItemByValue', '');
     $("#modelList").jqxComboBox('selectItem', '${param.oriItmId}');
            
	debugger;
// 	var obj = {};								
